<%= flash[:notice] %>

<div class="container">
      
  <div class="row">
    
    <div class="col-md-3">
        
      <%= render 'list', user: @user, book_new: @book_new  %>
                
    </div>
        
    <div class="col-md-8 offset-md-1">
        
      <h1>Book detail</h1>
        
      <table>
          
        <tr>
          
          <td>
                
            <%= link_to user_path(@book.id) do %>
                      
              <%= image_tag @book.user.get_profile_image(100,100) %></br>
                        
            <% end %>
                
            <%= link_to @user.name, user_path(@book.user) %>
                
          </td>
                    
          <td><%= link_to @book.title, book_path(@book) %></td>
                
          <td><%= @book.body %></td>
                
            <% if @book.user == current_user %>
                        
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                
              <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                
            <% end %>
              
        </tr>
                
      </table>
            
    </div>
            
  </div>  
          
</div>
      
      

