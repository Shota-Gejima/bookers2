<h1>User info</h1>

<div>
    
  <%= image_tag @book.user.get_profile_image(100,100) %>
  
  <table>
    
    <tr>
      <th>name</th>
      <th><% @book.user.name %></th>
    </tr>
    
    
    
  </table>

  <p><% @book.user.name %></p>
  
</div>

<h1>Book detail</h1>

<div>
    
<%= image_tag @book.user.get_profile_image(100,100) %>
  
  <p><%= @book.title %></p>
  
  <p><%= @book.body %></p>
  
  <% if @book.user == current_user %>
  
  <%= link_to "Edit", edit_book_path(@book.id) %>
  
  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  
  <% end %>
  
</div>


