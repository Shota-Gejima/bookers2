<h1>User info</h1>
    
  <%= image_tag user.get_profile_image(100,100) %>
  
  <table>
    
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    
    
    
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  
  </table>
  
  <% if user.id == current_user.id %>
  
    <%= link_to(edit_user_path(current_user.id),class: "btn btn-lg") do %>
    <i class="fa-solid fa-user-cog"></i>

   <% end %>
  
  <% else %>
    <%= link_to(edit_user_path(current_user.id),class: "btn btn-lg") do %>
    <i class="fa-solid fa-user-cog"></i>

  <% end %>
    
    

    <% end %>
  
  




<h1>New book</h1>

<%= form_with model: book_new, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  
  <%= f.text_area :body %><br>

  <button type="submit" class="btn btn-success">Create Book</button>

<% end %>




