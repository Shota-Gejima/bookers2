<h1>User info</h1>

<div>
    
  <%= image_tag user.get_profile_image(100,100) %>
  
  <table>
    
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    
    
    
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  
  </table>
  
  <% if user.id == current_user.id %>
  
    <%= link_to "edit", edit_user_path(current_user.id) %>
  
  <% else %>
  
    <%= link_to "edit", user_path(current_user.id) %>
  
  <% end %>
  
</div>

<h1>New book</h1>

<%= form_with model: book_new, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create book' %>
  
<% end %>

